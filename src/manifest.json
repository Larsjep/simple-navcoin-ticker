{
    "manifest_version": 2,

    "name": "Simple NAVCoin Ticker",
    "description": "This extension shows latest price ticker of popular NAVCoin trading markets.",
    "version": "0.2",

    "browser_action": {
        "default_icon": "images/nav-coin.png"
    },

    "background": {
        "scripts": [
            "javascripts/background.js"
        ]
    },

    "options_ui": {
        "page": "options/options.html",
        "chrome_style": false
    },

    "permissions": [
        "https://api.coinmarketcap.com/"
    ],

    "icons": {
       "128": "images/nav-icon128.png"
     }
}
