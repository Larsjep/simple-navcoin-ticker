{
    "manifest_version": 2,

    "name": "Simple Bitcoin Ticker",
    "description": "This extension shows latest price of BTC in market: MtGox, BTCChina",
    "version": "0.1",

    "browser_action": {
        "default_icon": {
            "19": "icon.png"
        }
    },

    "background": {
        "persistent": true,
        "page": "background.html"
    },

    "permissions": [
        "https://data.mtgox.com/",
        "https://data.btcchina.com/"
    ]
}
